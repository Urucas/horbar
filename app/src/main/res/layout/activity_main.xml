<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <com.urucas.horbar.Bar
        android:id="@+id/horbar3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/horbar1"
        android:layout_alignStart="@+id/horbar1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Code should be open source?"
        android:id="@+id/textView2"
        android:padding="8dp"
        android:layout_above="@+id/horbar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.urucas.horbar.Bar
        android:id="@+id/horbar1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horbar3"
        android:layout_alignLeft="@+id/horbar3"
        android:layout_alignStart="@+id/horbar3"
        android:layout_marginTop="42dp" />

    <com.urucas.horbar.Bar
        android:id="@+id/horbar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp" />


</RelativeLayout>
